import java.util.Scanner;

public class day83 {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Masukkan waktu dalam jam: ");
        double waktuJam = input.nextDouble();

        double waktuMenit = waktuJam * 60;
        double waktuDetik = waktuJam * 3600;

        System.out.println("Hasil konversi:");
        System.out.println("Jam    : " + waktuJam);
        System.out.println("Menit  : " + waktuMenit);
        System.out.println("Detik  : " + waktuDetik);
    }
}
